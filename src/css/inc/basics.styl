body
  background bg-color

main
  position relative
  margin 0 auto
  color text-color

a
  color link-color
  text-decoration: none;
  background-color: rgba(0, 0, 0, 0);
  background-image: -webkit-linear-gradient(top, rgba(0, 0, 0, 0) 49%, text-color 50%);
  background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0) 49%, text-color 50%);
  background-repeat: repeat-x;
  background-size: 2px 2px;
  background-position: 0 85%;
  text-shadow: -2px 0 #FFF, -1px 0 #FFF, 1px 0 #FFF, 2px 0 #FFF;

.content-box
  width 50%
  height 100%
  background: #DEDEDE url(../static/bg3.jpg);
  background-position left top
  background-attachment: fixed;
  padding-top: 3rem;
  text-align right
  section
    display inline-block
    width 450px
    min-width 400px
    margin 0 2rem 3rem .5rem
    padding 2rem 1.236rem 2rem 3.236rem
    background bg-color
    text-shadow 0 1px 1px #FFF
    border-radius 2px
    text-align left
    &.desc-box
      padding-top 1.5rem
      h1
        margin-left -3.236rem
        text-align center
      h2
        margin-bottom 1rem
      p
        margin-bottom .5rem
    &.sample-box
      h2
        font-family serif-stack
        font-weight 500
        margin-top .25rem
        margin-bottom .25rem
        a
          color #0079DF
          background-position 0 95%
          background-image -webkit-linear-gradient(top, rgba(0, 0, 0, 0) 49%, #0079DF 50%)
          background-image linear-gradient(to bottom, rgba(0, 0, 0, 0) 49%, #0079DF 50%)
      blockquote
        margin-bottom 2rem
        font-family serif-stack
        border-left 2px solid #DEDEDE
        padding-left .5rem
      cite
        font-family body-stack
        display block
        margin-bottom .25rem
        font-style normal
        font-size .8em
        color muted-color

  ul
    list-style-type square
    list-style-position inside
    color muted-color
    strong
      color text-color
  li
    margin-bottom .15rem

.cta-box
  position: fixed;
  top: 30%
  right: 0;
  width 50%
  height 100%
  fieldset
    margin 0 0 0 3rem
  legend
    margin-bottom .5rem
  form
    position relative
    .error-msg
      position absolute
      top 3rem
      left 0
      display block
      opacity 0
    &.empty, &.invalid
      transition .25s
      animation-name wobble
      animation-duration .35s
      .error-msg.empty
        opacity 1
    &.invalid
      .error-msg.invalid
        opacity 1

  .btn
    position absolute
    top 0
    left 240px
    height 42px
    padding 8px 18px 10px
    border-radius: 3px;
    background-color: active-color
    font-variant: small-caps;
    text-transform: lowercase;
    letter-spacing: 1px;
    font-weight: 500;
    line-height: 1;
    font-size: 1rem;
    text-shadow: 0 0px 1px #FFF
    color: text-color
    cursor: pointer;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    border-left 0
    &:focus
      outline: 2px solid #FFF;
      outline-offset: -4px;
    &:hover
      background darken(active-color, 2%)
      outline none
    &:active
      box-shadow: inset -2px 2px 1px darken(active-color, 15%)
      outline: none;
    .label
      vertical-align 1px

  input + label
    position: absolute
    top: .25rem
    left: .5rem
    z-index: 10
    color muted-color
    font-size 9px
    text-transform uppercase
    font-weight 600
    letter-spacing .3px

  input:valid + label
    color valid-color

  input[type='email']
    position absolute
    top 0
    border: 2px solid darken(active-color, 2%)
    height: 42px
    border-right: 0;
    margin-right: -3px;
    width: 250px;
    padding: .5rem;
    padding-bottom 0
    background bg-color
    border-top-left-radius: 3px
    border-bottom-left-radius: 3px
    background #FFF
    line-height 0
    &:focus
      outline none

footer
  position: fixed;
  bottom: 0;
  right: 0;
  padding: 0 1rem;
  text-align: right;
  p
    border-top: 1px solid #DEDEDE;
    padding: 1rem 0;
    font-size: 80%;
    margin-bottom 0


@media screen and (max-width: mobile-breakpoint)
  main
    padding-bottom 5rem
  .content-box
    width 100%
    background: #DEDEDE url(../static/bg3-m.jpg);
    background-position left top
    background-size contain
    background-attachment fixed
    padding-top: 1px
    section
      display block
      max-width 400px
      min-width initial
      width 95%
      margin 3rem auto
      padding 2rem 1.25rem
      background bg-color
      text-shadow 0 1px 1px #FFF
      border-radius 2px
      &.desc-box
        h1
          margin 0 0 2rem 0
        h2
          margin-bottom 2rem
          text-align center
        p
          margin-bottom .5rem
    ul
      list-style-type square
      list-style-position inside
      color muted-color
      strong
        color text-color
    li
      margin-bottom .15rem

  .cta-box
    position: fixed;
    bottom: 0;
    top: initial;
    left: 0;
    right: 0;
    z-index: 1000;
    width 100%
    background-color: #FCFCFA;
    height: 100px;
    padding: 1rem 0;
    &:before
      content ' '
      position absolute
      top -1px
      left 0
      right 0
      height 1px
      background #ECECD3

    fieldset
      margin 0
      padding 0 .5rem
      position: relative;
      display: block;
      margin: 0 auto;
      height: 100px;
      width: 340px;
    legend
      margin-bottom .25rem
    input[type='email']
      width auto
      min-width 100px
      width 66%
      padding-top 0.5rem
    input[type='email'] + label
      top .25rem
      letter-spacing 0
    .btn
      left 65%
      min-width 80px
      padding 8px 12px 10px

  footer
    display none
