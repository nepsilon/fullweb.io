body
  background bg-color

main
  position relative
  margin 0 auto
  color text-color

a
  color link-color
  text-decoration: none;
  background-color: rgba(0, 0, 0, 0);
  background-image: -webkit-linear-gradient(top, rgba(0, 0, 0, 0) 49%, text-color 50%);
  background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0) 49%, text-color 50%);
  background-repeat: repeat-x;
  background-size: 2px 2px;
  background-position: 0 85%;
  text-shadow: -2px 0 #FFF, -1px 0 #FFF, 1px 0 #FFF, 2px 0 #FFF;

.content-box
  width 50%
  height 100%
  background: url(../static/bg3.jpg);
  background-position left top
  background-attachment: fixed;
  padding-top: 3rem;
  text-align right
  section
    display inline-block
    width 450px
    min-width 400px
    margin 0 2rem 3rem .5rem
    padding 2rem 1.236rem 2rem 3.236rem
    background bg-color
    text-shadow 0 1px 1px #FFF
    border-radius 2px
    text-align left
    &.desc-box
      h1
        margin-bottom 1rem
        font-size 3rem
      h2
        margin-bottom 2rem
      p
        margin-bottom .5rem
  ul
    list-style-type square
    list-style-position inside
    color muted-color
    strong
      color text-color
  li
    margin-bottom .15rem

.cta-box
  position: fixed;
  top: 30%
  right: 0;
  width 50%
  height 100%
  fieldset
    margin 0 0 0 3rem
  legend
    margin-bottom .5rem

  .btn
    position absolute
    top 0
    left 240px
    height 42px
    padding 8px 18px 10px
    border-radius: 3px;
    background-color: active-color
    font-variant: small-caps;
    text-transform: lowercase;
    letter-spacing: 1px;
    font-weight: 500;
    line-height: 1;
    font-size: 1rem;
    text-shadow: 0 0px 1px #FFF
    color: text-color
    cursor: pointer;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    border-left 0
    &:focus
      outline: 2px solid #FFF;
      outline-offset: -4px;
    &:hover
      background darken(active-color, 2%)
      outline none
    &:active
      box-shadow: inset -2px 2px 1px darken(active-color, 15%)
      outline: none;
    .label
      vertical-align 1px

  input + label
    position: absolute
    top: .5rem
    left: .5rem
    z-index: 10
    color muted-color
    letter-spacing .3px
    will-change transform, font-size, font-weight, text-transform
    transition .15s ease-out

  input:focus + label,
  input:invalid + label,
  input:valid + label
    transform translateY(-5px)
    font-size 9px
    text-transform uppercase
    font-weight 600

  input:valid + label
    color valid-color
  input + label:after
    opacity 0
    transition opacity .2s ease-out
  input:valid + label:after
    opacity 1
    content: 'âœ“';
    color: #FFF;
    margin-left: 2px;
    background-color: #27AE60;
    border-radius: 50%;
    width: 10px;
    height: 10px;
    position: absolute;
    text-align: center;
    font-weight: 200;

  input[type='email']
    position absolute
    top 0
    border: 2px solid darken(active-color, 2%)
    height: 42px
    border-right: 0;
    margin-right: -3px;
    width: 250px;
    padding: .5rem;
    padding-bottom 0
    background bg-color
    border-top-left-radius: 3px
    border-bottom-left-radius: 3px
    background #FFF
    &:focus
      outline none

footer
  position: fixed;
  bottom: 0;
  right: 0;
  padding: 0 1rem;
  text-align: right;
  p
    border-top: 1px solid #DEDEDE;
    padding: 1rem 0;
    font-size: 80%;
    margin-bottom 0

@media screen and (max-width:mobile-breakpoint)
  main
    padding-bottom 5rem
  .content-box
    width 100%
    background: url(../static/bg3.jpg);
    background-position left top
    background-size cover
    background-attachment: fixed;
    padding-top: 1px
    section
      display block
      max-width 400px
      min-width initial
      width 95%
      margin 3rem auto
      padding 2rem 1.25rem
      background bg-color
      text-shadow 0 1px 1px #FFF
      border-radius 2px
      &.desc-box
        h1
          margin-bottom 1rem
          font-size 3rem
        h2
          margin-bottom 2rem
        p
          margin-bottom .5rem
    ul
      list-style-type square
      list-style-position inside
      color muted-color
      strong
        color text-color
    li
      margin-bottom .15rem

  .cta-box
    position: fixed;
    bottom: 0;
    top: initial;
    left: 0;
    right: 0;
    z-index: 1000;
    width 100%
    background-color: #FCFCFA;
    height: 100px;
    padding: 1rem 0;
    box-shadow 0 -3px 2px -2px #DEDEDE
    &:before
      content ' '
      position absolute
      top 0
      left 0
      right 0
      opacity .25
      height 3px
      background #DEDEDE
    fieldset
      margin 0
      padding 0 .5rem
      position: relative;
      display: block;
      margin: 0 auto;
      height: 100px;
      width: 340px;
    legend
      margin-bottom .25rem
    input[type='email']
      width auto
      min-width 100px
      width 66%
    .btn
      left 65%
      min-width 100px

    

  footer
    display none
