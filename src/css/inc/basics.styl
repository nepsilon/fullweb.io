    color: #FFF;
    margin-left: 2px;
    background-color: #27AE60;
    border-radius: 50%;
    width: 10px;
    height: 10px;
    position: absolute;
    text-align: center;
    font-weight: 200;

  input[type='email']
    position absolute
    top 0
    border: 2px solid darken(active-color, 2%)
    height: 42px
    border-right: 0;
    margin-right: -3px;
    width: 250px;
    padding: .5rem;
    padding-bottom 0
    background bg-color
    border-top-left-radius: 3px
    border-bottom-left-radius: 3px
    background #FFF
    &:focus
      outline none

